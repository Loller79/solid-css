{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationMap": true,
    "listEmittedFiles": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es3"
  },
  "exclude": [
    "node_modules",
    "jest.config.js"
  ],
  "files": [
    "index.ts"
  ],
  "include": [
    "components/**/*",
    "libs/**/*",
    "various/**/*"
  ]
}
